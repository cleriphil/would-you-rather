<%= form_for question, :remote => true, :authenticity_token => true do |f| %>
  <%= question.description_a %>
  <%= image_tag question.image_a.url(:thumb) %>
  <%= f.submit "Vote A", :value => question.description_a %>
  <%= question.description_b %>
  <%= image_tag question.image_b.url(:thumb) %>
  <%= f.submit "Vote B", :value => question.description_b %>
  <%= link_to "(remove)", question, method: :delete, data: {confirm: "Are you sure?"}, remote: true %>
<% end %>

