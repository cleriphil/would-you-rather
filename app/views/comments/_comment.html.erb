<div class="panel">
  <%= comment.comment %><br>
  by <%= comment.author %> <br>
  <%= comment.created_at %>

  <% if current_user && (comment.user_id === current_user.id || current_user.admin? == true) %>
    <%= link_to 'Delete Comment', question_comment_path(Question.find(comment.question_id), comment),
                                  :data => {:confirm => "Are you sure?",
                                  :method => "delete"} %>
    <% end %>
</div>
